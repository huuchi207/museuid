<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?><?import javafx.geometry.Insets?><?import javafx.scene.control.Button?><?import javafx.scene.control.Label?><?import javafx.scene.control.ProgressIndicator?><?import javafx.scene.control.TextField?><?import javafx.scene.Group?><?import javafx.scene.layout.AnchorPane?><?import javafx.scene.layout.ColumnConstraints?><?import javafx.scene.layout.GridPane?><?import javafx.scene.layout.RowConstraints?><?import javafx.scene.layout.StackPane?><?import javafx.scene.layout.VBox?><?import javafx.scene.text.Font?><?import javafx.scene.control.PasswordField?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
  xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="br.com.museuid.screen.initialize.InitializeController">
  <stylesheets>
    <URL value="@../../css/default.css" />
    <URL value="@../../css/custom.css" />
    <URL value="@../../css/dialog.css" />
    <URL value="@../../css/login.css" />
  </stylesheets>
  <StackPane>
    <VBox fx:id="vBoxRegisterDevice" visible="false" style="-fx-background-color: white;">
      <padding>
        <Insets top="25" right="25" bottom="25" left="25" />
      </padding>
      <Label text="Đăng ký máy" alignment="CENTER" styleClass="titulo">
        <VBox.margin>
          <Insets bottom="10.0" />
        </VBox.margin>
      </Label>
      <Label fx:id="lbLegend" styleClass="lb-info-requerido" text="Để sử dụng phần mềm, vui lòng nhập các thông tin sau: ">
        <VBox.margin>
          <Insets bottom="10.0" />
        </VBox.margin>
      </Label>
      <GridPane StackPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints prefWidth="200.0" />
          <ColumnConstraints prefWidth="400.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" />
          <RowConstraints maxHeight="45.0" minHeight="30.0" prefHeight="30.0" />
        </rowConstraints>
        <Label text="Tên máy: " GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="lbl-black" />
        <TextField fx:id="tfDeviceName" promptText="VD: Máy 1" GridPane.columnIndex="1"
          GridPane.rowIndex="0" />
        <Label text="Vị trí: " GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="lbl-black" />
        <TextField fx:id="tfDeviceLocation" promptText="VD: Tầng 1" GridPane.columnIndex="1"
          GridPane.rowIndex="1" />
      </GridPane>

      <Label styleClass="lb-info-requerido" text="Sử dụng tài khoản quản lý(nhân viên, chủ quán) để đăng ký: ">
        <VBox.margin>
          <Insets bottom="10.0" top="10"/>
        </VBox.margin>
      </Label>
      <GridPane StackPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints prefWidth="200.0" />
          <ColumnConstraints prefWidth="400.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" />
          <RowConstraints maxHeight="45.0" minHeight="30.0" prefHeight="30.0" />
        </rowConstraints>
        <Label text="Tên nguời dùng: " GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="lbl-black" />
        <TextField fx:id="tfUsername" GridPane.columnIndex="1"
          GridPane.rowIndex="0" />
        <Label text="Mật khẩu: " GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="lbl-black" />
        <PasswordField fx:id="pfPass"  GridPane.columnIndex="1"
          GridPane.rowIndex="1" />
      </GridPane>

      <Button mnemonicParsing="false" onAction="#signIn" prefHeight="20.0" styleClass="bt-logar"
        text="%txt_sign_in" textFill="WHITE" fx:id="btRegister">
        <font>
          <Font size="16.0" />
        </font>
        <VBox.margin>
          <Insets top="20.0" />
        </VBox.margin>
      </Button>
    </VBox>
    <Group StackPane.alignment="CENTER">
      <VBox fx:id="vboxProgress" >
        <ProgressIndicator fx:id="progressIndicator" />
        <Label styleClass="progress-dialogs-msg" text="%txt_progressing" />
      </VBox>
    </Group>
  </StackPane>

</AnchorPane>
