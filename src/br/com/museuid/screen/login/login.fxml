<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane stylesheets="@../../css/login.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.museuid.screen.login.LoginController">
  <StackPane>
    <AnchorPane layoutX="-38.0" layoutY="-39.0" prefHeight="289.0" prefWidth="511.0" styleClass="box-login">
      <TextField fx:id="tfUser" layoutX="68.0" layoutY="65.0" prefHeight="40.0" prefWidth="336.0" styleClass="nome" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0">
        <font>
          <Font size="14.0" />
        </font>
      </TextField>
      <PasswordField fx:id="pfPass" layoutX="68.0" layoutY="120.0" prefHeight="40.0" prefWidth="333.0" styleClass="senha" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0">
        <font>
          <Font size="14.0" />
        </font>
      </PasswordField>
      <Button layoutX="73.0" layoutY="179.0" mnemonicParsing="false" onAction="#login" prefHeight="39.0" prefWidth="368.0" styleClass="bt-logar" text="%txt_log_in" textFill="WHITE">
        <font>
          <Font size="16.0" />
        </font>
      </Button>
      <Button layoutX="378.0" layoutY="239.0" onAction="#forgotPassword" prefHeight="17.0" prefWidth="103.0" styleClass="no-border-bt" text="%txt-forgot-pass" textAlignment="RIGHT" textFill="#10cbe4" />
      <Label alignment="CENTER" layoutX="163.0" layoutY="14.0" styleClass="login-txt" text="%txt_log_in" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <font>
          <Font size="18.0" />
        </font>
      </Label>
    </AnchorPane>
    <Group StackPane.alignment="CENTER">
      <ProgressIndicator fx:id="progressIndicator"  visible="false"/>
    </Group>
  </StackPane>

</AnchorPane>
