<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
  >
    <children>
        <HBox prefHeight="60.0" prefWidth="1207.0" styleClass="box-topo" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="lbTitle" alignment="BOTTOM_LEFT" layoutX="10.0" maxWidth="1.7976931348623157E308" styleClass="titulo" text="Título" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="445.0" AnchorPane.topAnchor="0.0" HBox.hgrow="ALWAYS">
                </Label>
                <TextField fx:id="txtSearch" prefHeight="50.0" prefWidth="417.0" promptText="Tìm kiếm" styleClass="pesquisar" />
                <ToggleButton mnemonicParsing="false" onAction="#tbAdd" text="">
                    <styleClass>
                        <String fx:value="menus-tela" />
                        <String fx:value="menu-add" />
                    </styleClass>
                    <toggleGroup>
                        <ToggleGroup fx:id="menu" />
                    </toggleGroup>
                </ToggleButton>
                <ToggleButton layoutX="1150.0" layoutY="27.0" mnemonicParsing="false" onAction="#tbEdit" text="" toggleGroup="$menu">
                    <styleClass>
                        <String fx:value="menus-tela" />
                        <String fx:value="menu-editar" />
                    </styleClass>
                </ToggleButton>
                <ToggleButton layoutX="1150.0" layoutY="27.0" mnemonicParsing="false" onAction="#tbExclude" text="" toggleGroup="$menu">
                    <styleClass>
                        <String fx:value="menus-tela" />
                        <String fx:value="menu-excluir" />
                    </styleClass>
                </ToggleButton>
            </children>
        </HBox>
        <GridPane fx:id="telaCadastro" hgap="10.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="15.0"
          AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="60.0">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="994.0" minWidth="631.0" prefWidth="631.0" />
            <ColumnConstraints maxWidth="536.0" minWidth="173.0" prefWidth="536.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" />
                <RowConstraints maxHeight="45.0" minHeight="30.0" prefHeight="30.0" />
                <RowConstraints maxHeight="35.0" minHeight="20.0" prefHeight="35.0" />
                <RowConstraints minHeight="10.0" prefHeight="35.0" />
                <!--<RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" />-->
                <!--<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />-->
            </rowConstraints>
            <children>
                <Label styleClass="lb-info-requerido" text="%txt_nick_name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtUserName" styleClass="campo" visible="true" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                <Label layoutX="10.0" layoutY="17.0" styleClass="lb-info-requerido" text="%txt_full_name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <TextField fx:id="txtName" layoutX="10.0" layoutY="40.0" styleClass="campo" visible="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label styleClass="lb-info" text="%txt_phone_number" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextArea fx:id="txtPhoneNumber" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

              <Label styleClass="lb-info" text="%txt_address" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
              <TextArea fx:id="txtAddress" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </children>
        </GridPane>
        <AnchorPane fx:id="apEdit" visible="false" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
            <children>
                <TableView fx:id="tbUser" tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="10.0">
                    <columns>
                        <TableColumn fx:id="colId" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="Id" />
                        <TableColumn fx:id="colUserName" maxWidth="900.0" minWidth="150.0" prefWidth="150.0" text="%txt_nick_name" />
                        <TableColumn fx:id="colName" maxWidth="900.0" minWidth="150.0" prefWidth="150.0" text="%txt_full_name" />
                        <TableColumn fx:id="colPhoneNumber" maxWidth="900.0" minWidth="150.0" prefWidth="250.0" text="%txt_phone_number" />
                        <TableColumn fx:id="colAddress" maxWidth="900.0" minWidth="150.0" prefWidth="250.0" text="%txt_address" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>
        <AnchorPane prefHeight="50.0" styleClass="box-menus-subtela" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
            <children>
                <StackPane AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
                    <children>
                        <Button fx:id="btSave" contentDisplay="TOP" mnemonicParsing="false" onAction="#save" prefHeight="40.0" prefWidth="200.0" style=""
                          text="%txt_save" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <styleClass>
                                <String fx:value="menus-acoes" />
                                <String fx:value="acao-salvar" />
                        <String fx:value="menu-green" />
                            </styleClass>
                        </Button>
                        <Button id="" fx:id="btEdit" contentDisplay="TOP" mnemonicParsing="false" onAction="#edit" prefHeight="40.0" prefWidth="200.0" style=""
                          text="%txt_edit" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <styleClass>
                                <String fx:value="menus-acoes" />
                                <String fx:value="acao-editar" />
                        <String fx:value="menu-laranja" />
                            </styleClass>
                        </Button>
                        <Button id="" fx:id="btExclude" contentDisplay="TOP" mnemonicParsing="false" onAction="#exclude" prefHeight="40.0"
                          prefWidth="200.0" style="" text="%txt_delete" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <styleClass>
                                <String fx:value="menus-acoes" />
                                <String fx:value="acao-excluir" />
                        <String fx:value="menu-red" />
                            </styleClass>
                        </Button>
                    </children>
                </StackPane>
                <Label fx:id="legenda" layoutX="36.0" layoutY="17.0" styleClass="lb-info-requerido" text="%txt_required_fields" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="5.0" />
            </children>
        </AnchorPane>
    </children>
    <stylesheets>
        <URL value="@../../css/default.css" />
        <URL value="@../../css/custom.css" />
    </stylesheets>
</fx:root>
